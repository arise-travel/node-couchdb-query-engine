{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "mocha": true
    },
    "rules": {
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "indent": [
            "error",
            4
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ]
    }
}
